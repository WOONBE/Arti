<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >

        <ImageView
            android:id="@+id/iv_artist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:src="@drawable/temp_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_28pt_black"
            android:text="잠만보"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/iv_artist"
            app:layout_constraintTop_toTopOf="@id/iv_artist" />

        <TextView
            android:id="@+id/tv_artist_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="하루종일 잠만 자는 화가"
            app:layout_constraintStart_toStartOf="@id/tv_artist_name"
            app:layout_constraintTop_toBottomOf="@id/tv_artist_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>