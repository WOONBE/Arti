<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv_theme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="테마 : 희망"
            android:fontFamily="@font/inter_28pt_black"
            android:textSize="24sp"
            android:layout_margin="20dp" />

        <ImageView
            android:id="@+id/iv_preview_image1"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_theme_title"
            android:layout_width="wrap_content"
            android:src="@drawable/temp_preview_image1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_preview_image2"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/iv_preview_image1"
            app:layout_constraintTop_toBottomOf="@id/tv_theme_title"
            android:layout_width="wrap_content"
            android:src="@drawable/temp_preview_image2"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_preview_image3"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/iv_preview_image2"
            app:layout_constraintTop_toBottomOf="@id/tv_theme_title"
            android:layout_width="wrap_content"
            android:src="@drawable/temp_preview_image3"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>